pipeline {
    agent any
    tools { 
        maven 'Maven 3.0' 
    }
    stages {
        stage("Build") {
            steps {
                echo "Building..."
                snDevOpsStep()
                sh 'mvn clean install'
            }
        }
        stage("Test") {
            steps {
            	echo "Testing..."
                snDevOpsStep()
                sh "mvn test -Dpublish"
               junit "**/target/surefire-reports/*.xml"
               
               snDevOpsArtifact(artifactsPayload:"""{"artifacts": [{"name": "devops_pipeline_demo.jar","version": "2.2","semanticVersion": "2.2.0","repositoryName": "devops_pipeline_demo"}]}""")
            }
        }
        stage("Deploy") {
            steps {
            	echo "Deploying.."
                snDevOpsStep()
                snDevOpsPackage(name: "devops_pipeline_demo", artifactsPayload: """{"artifacts": [{"name": "devops_pipeline_demo.jar","version": "2.2","semanticVersion": "2.2.0","repositoryName": "devops_pipeline_demo"}]}""")
                sleep 5
                snDevOpsChange()
            }
        }
    }
}
