pipeline {
    agent any
    tools { 
        maven 'Maven 3.0' 
    }
    stages {
        stage("Build") {
            steps {
                echo "Building..."
                snDevOpsStep()
                sh 'mvn clean install'
            }
        }
        stage("Test") {
            steps {
            	echo "Testing..."
                snDevOpsStep()
                sh "mvn test -Dpublish"
               junit "**/target/surefire-reports/*.xml"
               
               snDevOpsArtifact(artifactsPayload:"""{"artifacts": [
                    {"name": "3_demo.jar","version": "3.4","semanticVersion": "3.4.0","repositoryName": "3_demo"}]}""")
            }
        }
        stage("Deploy") {
            steps {
            	echo "Deploying.."
                snDevOpsStep()

                sleep 5
                snDevOpsChange()
            }
        }
    }
}
