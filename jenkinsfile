pipeline {
    agent any
    tools { 
        maven 'Maven 3.0' 
    }
    stages {
        stage("Build") {
            steps {
                echo "Building..."
                snDevOpsStep()
                sh 'mvn clean install'
            }
        }
        stage("Test") {
            steps {
            	echo "Testing..."
                snDevOpsStep()
                sh "mvn test -Dpublish"
               junit "**/target/surefire-reports/*.xml"
               
               snDevOpsArtifact(artifactsPayload:"""{"artifacts": [
                    {"name": "4_demo.jar","version": "4.0","semanticVersion": "4.0.0","repositoryName": "4_demo"}, 
                    {"name": "devops_pipeline_demo.jar","version": "2.7","semanticVersion": "2.7.0","repositoryName": "devops_pipeline_demo"},
                    {"name": "1_demo.jar","version": "1.2","semanticVersion": "1.2.0","repositoryName": "1_demo"},
                    {"name": "2_demo.jar","version": "2.1","semanticVersion": "2.1.0","repositoryName": "2_demo"},
                    {"name": "3_demo.jar","version": "3.0","semanticVersion": "3.0.0","repositoryName": "3_demo"}]}""")
            }
        }
        stage("Deploy") {
            steps {
            	echo "Deploying.."
                snDevOpsStep()
                snDevOpsPackage(name: "devops_pipeline_demo", artifactsPayload: """{"artifacts": [
                        {"name": "4_demo.jar","version": "4.0","semanticVersion": "4.0.0","repositoryName": "4_demo"},
                        {"name": "devops_pipeline_demo.jar","version": "2.7","semanticVersion": "2.7.0","repositoryName": "devops_pipeline_demo"},
                        {"name": "1_demo.jar","version": "1.2","semanticVersion": "1.2.0","repositoryName": "1_demo"},
                        {"name": "2_demo.jar","version": "2.1","semanticVersion": "2.1.0","repositoryName": "2_demo"},
                        {"name": "3_demo.jar","version": "3.0","semanticVersion": "3.0.0","repositoryName": "3_demo"}]}""")
                sleep 5
                snDevOpsChange()
            }
        }
    }
}
