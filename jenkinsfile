pipeline {
    agent any
    tools { 
        maven 'Maven 3.0' 
    }
    stages {
        stage("Build") {
            steps {
                echo "Building..."
                snDevOpsStep()
                sh 'mvn clean install'
            }
        }
        stage("Test") {
            steps {
            	echo "Testing..."
                snDevOpsStep()
                sh "mvn test -Dpublish"
               junit "**/target/surefire-reports/*.xml"
               
               snDevOpsArtifact(artifactsPayload:"""{"artifacts": [
                    {"name": "demo1.jar","version": "1.0","semanticVersion": "1.0.0","repositoryName": "demo1"},
                    {"name": "demo2.jar","version": "2.0","semanticVersion": "2.0.0","repositoryName": "demo2"},
                    {"name": "demo3.jar","version": "2.0","semanticVersion": "2.0.0","repositoryName": "demo3"},
                    {"name": "demo4.jar","version": "2.0","semanticVersion": "2.0.0","repositoryName": "demo4"},
                    {"name": "demo5.jar","version": "2.0","semanticVersion": "2.0.0","repositoryName": "demo5"}]}""")
            }
        }
        stage("Deploy") {
            steps {
            	echo "Deploying.."
                snDevOpsStep()

                sleep 5
                snDevOpsChange()
            }
        }
    }
}
